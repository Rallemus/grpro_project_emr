<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.controller.ReservationController">
        <bottom>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                <children>
                    <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                        <children>
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sal:" />
                            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ledige pladser:" />
                        </children>
                    </VBox>
                    <Separator HBox.hgrow="ALWAYS" />
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Sæder:" />
                    <MenuButton mnemonicParsing="false" text="Antal">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Action 1" />
                            <MenuItem mnemonicParsing="false" text="Action 2" />
                        </items>
                    </MenuButton>
                    <Separator HBox.hgrow="ALWAYS" />
                    <Button mnemonicParsing="false" text="Reservér" />
                </children>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </HBox>
        </bottom>
   <center>
      <Canvas height="200.0" width="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <ComboBox fx:id="moviesBox" prefWidth="150.0" promptText="Film" />
            <ComboBox fx:id="datesBox" prefWidth="150.0" promptText="Dato" />
            <ComboBox fx:id="timesBox" prefWidth="150.0" promptText="Tid" />
         </children>
      </HBox>
   </top>
    </BorderPane>
